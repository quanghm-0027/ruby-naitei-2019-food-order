<%= render "shared/admin_header" %>
<%= render "shared/admin_sidenav" %>

<main role="main" class="container">
  <h2><%= t "admin_login.title" %></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label t("admin_login.username") %><br />
      <%= f.text_field :username, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label t("admin_login.password") %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label t("admin_login.remember_me") %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit t("admin_login.button") %>
    </div>
  <% end %>

  <%= render "admins/shared/links" %>
</main>
